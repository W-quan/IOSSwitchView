<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <com.hhl.library.IOSSwitchView
            android:id="@+id/switch_view"
            android:layout_width="55dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            app:thumbTintColor="#fff"
            app:tintColor="#00ff00" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="状态：关" />

    </LinearLayout>

    <com.hhl.library.IOSSwitchView
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        app:thumbTintColor="#CC66FF"
        app:tintColor="#EB2A38" />

    <com.hhl.library.IOSSwitchView
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        app:isOn="true"
        app:thumbTintColor="#fff"
        app:tintColor="#B02BEB" />

    <com.hhl.library.IOSSwitchView
        android:layout_width="85dp"
        android:layout_height="55dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        app:thumbTintColor="#fff"
        app:tintColor="#2526EB" />

    <com.hhl.library.IOSSwitchView
        android:layout_width="95dp"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        app:thumbTintColor="#FFFF00"
        app:tintColor="#FF7F00" />

    <com.hhl.library.IOSSwitchView
        android:layout_width="135dp"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        app:isOn="true"
        app:thumbTintColor="#fff"
        app:tintColor="#996633" />

</LinearLayout>
